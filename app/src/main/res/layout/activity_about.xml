<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />
    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#108DD0"/>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_cover_image"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Ever-Protect"
                android:textColor="#000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/readme"
                android:textStyle="italic"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Click Here to know about the project"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/readme"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Under the guidance of Dr. Sreeja P."
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prof"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Team -"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/nikhil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Gaddam Nikhil"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/arhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nikhil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Arhan Kundu"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/izar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arhan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Izhar ahmed"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>